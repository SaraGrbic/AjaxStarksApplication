@model IEnumerable<AjaxStarksApplication.Enrollment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Marks of Students</h2>

<p>
    <button type="button" id="btnCreate" class="btn btn-primary" data-toggle="modal" data-target="#enrollmentModal">
        Create New
    </button>
</p>

    <table id="listEnrollments" class="table">
        <thead>
            <tr>
                <th>Student Name</th>
                <th>Course Name</th>
                <th>Mark</th>
                <th></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
    <!--Insert/Update Model-->
    <div id="enrollmentModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><label id="title"></label></h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="hidden" class="form-control" id="EnrollmentId" />
                                <label>Student Id</label>
                                <input type="text" id="StudentId" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <label>Course Id</label>
                                <input type="text" id="CourseId" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <label>Student Name</label>
                                <input type="text" id="StudentName" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <label>Course Name</label>
                                <input type="text" id="CourseName" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <label>Mark</label>
                                <input type="text" id="Mark" class="form-control" />
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" id="btnSave" class="btn btn-primary">Save</button>
                    <button type="button" id="btnClose" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <!--Confirmation modal-->
    <div id="confirmModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><label id="title"></label></h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        Do you want to delete this enrollment ?
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnOk" class="btn btn-primary">Ok</button>
                    <button type="button" id="btnCancel" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

@section Scripts
   {
    <script type="text/javascript" src="~/Scripts/lib/Enrollment.js"></script>
    
    }
