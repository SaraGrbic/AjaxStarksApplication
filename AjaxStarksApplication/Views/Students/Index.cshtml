@model IEnumerable<AjaxStarksApplication.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Students</h2>

<p>
   <button type="button" id="btnCreate" class="btn btn-primary" data-toggle="modal" data-target="#studentModal">
       Create New 
   </button>
</p>
<table id="listStudents" class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Address
            </th>
            <th>
                City
            </th>
            <th>
                State
            </th>
            <th>
                Date of birth
            </th>
            <th>
                Gender
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody></tbody>
   </table>
<!--Insert/Update Model-->
<div id="studentModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><label id="title"></label></h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="hidden" class="form-control" id="Id" />
                            <label>First Name</label>
                            <input type="text" id="FirstName" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label>Last Name</label>
                            <input type="text" id="LastName" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label>Address</label>
                            <input type="text" id="Address" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label>City</label>
                            <input type="text" id="City" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label>State</label>
                            <input type="text" id="State" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label>Date of birth</label>
                            <input type="text" id="DateOfBirth" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label>Gender</label>
                            <input type="text" id="Gender" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" id="btnSave" class="btn btn-primary">Save</button>
                <button type="button" id="btnClose" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
<!--Confirmation modal-->
<div id="confirmModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><label id="title"></label></h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    Do you want to delete this student?
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnOK" class="btn btn-primary">Ok</button>
                <button type="button" id="btnCancel" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
<script type="text/javascript" src="~/Scripts/lib/Student.js"></script>

    }


